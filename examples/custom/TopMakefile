REAL_OCAMLC=$(if $(WIN32),$(shell cygpath '$(OCAMLC)'),$(OCAMLC))

all:
	cd src && '$(REAL_OCAMLC)' -c foo.mli bar.mli && '$(REAL_OCAMLC)' -a -o simplelib.cma foo.mli foo.ml bar.ml

clean:
	$(RM) src/foo.cm[xoi] src/bar.cm[xoi] src/simplelib.cma

distclean:
